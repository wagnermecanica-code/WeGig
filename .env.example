# WeGig - Environment Variables Example
# 
# IMPORTANTE: Copie este arquivo para .env e adicione suas chaves reais
# NUNCA commit o arquivo .env no Git (protegido por .gitignore)

# ========================================
# Firebase Configuration
# ========================================
FIREBASE_PROJECT_ID=to-sem-banda-83e19
FIREBASE_MESSAGING_SENDER_ID=278498777601

# Firebase API Keys (auto created by Firebase Console)
FIREBASE_API_KEY_IOS=your_ios_api_key_here
FIREBASE_API_KEY_ANDROID=your_android_api_key_here
FIREBASE_API_KEY_WEB=your_web_api_key_here

# ========================================
# Google Maps API Keys
# ========================================
# Android: Use Browser key (obtida no Google Cloud Console)
# iOS: Use iOS key (obtida no Google Cloud Console)
GOOGLE_MAPS_API_KEY_ANDROID=your_browser_key_here
GOOGLE_MAPS_API_KEY_IOS=your_ios_key_here
GOOGLE_MAPS_API_KEY=your_browser_key_here

# ========================================
# Google Sign-In OAuth Client IDs
# ========================================
# Obtidos no Google Cloud Console > Credenciais
GOOGLE_OAUTH_CLIENT_ID_IOS=your_ios_client_id_here
GOOGLE_OAUTH_CLIENT_ID_WEB=your_web_client_id_here

# ========================================
# App Configuration
# ========================================
APP_ENV=development
APP_NAME=WeGig

# ========================================
# Analytics & Monitoring
# ========================================
ANALYTICS_ENABLED=true
CRASHLYTICS_ENABLED=true

# ========================================
# Feature Flags
# ========================================
ENABLE_DARK_MODE=false
ENABLE_PUSH_NOTIFICATIONS=true
MAX_DISTANCE_KM=20000

# ========================================
# Debug Options
# ========================================
DEBUG_MODE=true
VERBOSE_LOGGING=false
